script/source = "extends Node2D

signal attack_ended
signal mosquito_burned


func _ready() -> void:
	AudioServer.set_bus_mute(AudioServer.get_bus_index(\"Music\"), true)

func _physics_process(_delta: float) -> void:
	var angle_to_mouse = global_position.direction_to(get_global_mouse_position()).angle()
	rotation = clampf(angle_to_mouse + deg_to_rad(90), deg_to_rad(-70), deg_to_rad(70))

func _attack_ended() -> void:
	AudioServer.set_bus_mute(AudioServer.get_bus_index(\"Music\"), false)
	attack_ended.emit()


func _on_kill_area_body_entered(body: Node2D) -> void:
	body.queue_free()
	mosquito_burned.emit()
"

